# Ambiente de desenvolvimento - NUNCA publicar valores reais aqui.
# Substitua por valores reais nas variáveis de ambiente no CI/Secrets

# App
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (ex.: Postgres)
DATABASE_URL=postgres://user:password@localhost:5432/burocracia_zero

# JWT / Auth
JWT_SECRET=replace_with_strong_secret

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_WHATSAPP_FROM=whatsapp:+1415XXXXXXX

# Moloni (se aplicável)
MOLONI_CLIENT_ID=
MOLONI_CLIENT_SECRET=
MOLONI_REDIRECT_URI=

# Storage (S3 / MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=uploads

# Outros
LOG_LEVEL=info

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=burocracia

# Django
DJANGO_SECRET_KEY=changeme_secret_key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Set the module wsgi of your django project
DJANGO_WSGI_MODULE=core.wsgi